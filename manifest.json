{
  "manifest_version": 2,

  "name": "哔哩哔哩·猜你喜欢",
  "description": "为你的哔哩哔哩PC首页增加「猜你喜欢」模块",
  "version": "1.9",

  "icons":{
  	"16": "icon.png",
  	"48":"icon.png",
  	"128":"icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "哔哩哔哩猜你喜欢",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://www.bilibili.com/*",
    "https://www.bilibili.com/*",
    "https://comment.bilibili.com/*",
    "storage",
    "unlimitedStorage"
  ],
  "content_scripts": [{
    "matches": [
      "http://www.bilibili.com/*",
      "https://www.bilibili.com/*"
    ],
    "js":[
      "bili-functions.js",
      "main.js"
    ],
    "run_at": "document_idle"
  }]
}
